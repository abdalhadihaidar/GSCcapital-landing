generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  role      String   @default("user") // admin, user
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Website Sections Management
model WebsiteSection {
  id          String   @id @default(cuid())
  title       String
  subtitle    String?
  content     String?
  type        String   // hero, about, services, contact, etc.
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Companies Management
model Company {
  id          String   @id @default(cuid())
  name        String   @unique
  slug        String   @unique
  description String
  icon        String?
  imageUrl    String?
  color       String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  features    CompanyFeature[]
  services    CompanyService[]
}

model CompanyFeature {
  id         String   @id @default(cuid())
  title      String
  companyId  String
  order      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  company    Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

model CompanyService {
  id         String   @id @default(cuid())
  title      String
  description String?
  companyId  String
  order      Int      @default(0)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  
  company    Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
}

// Statistics Management
model Statistic {
  id          String   @id @default(cuid())
  label       String
  value       String
  icon        String?
  imageUrl    String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Testimonials Management
model Testimonial {
  id          String   @id @default(cuid())
  name        String
  company     String?
  role        String?
  content     String
  rating      Int      @default(5)
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Services Management
model Service {
  id          String   @id @default(cuid())
  title       String
  description String
  category    String   // property, tech, business, finance, consulting
  icon        String?
  imageUrl    String?
  isActive    Boolean  @default(true)
  order       Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

// Contact Messages
model ContactMessage {
  id        String   @id @default(cuid())
  name      String
  email     String
  company   String?
  message   String
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

// Settings Management
model Setting {
  id        String   @id @default(cuid())
  key       String   @unique
  value     String?
  type      String   @default("text") // text, number, boolean, json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}